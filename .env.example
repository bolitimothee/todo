# ============================================================
# RENDER DEPLOYMENT - Pour Render MySQL
# ============================================================
# Render fournit DATABASE_URL au format:
# mysql://admin:password@hostname:3306/todo_app
DATABASE_URL=mysql://admin:password@your-render-host:3306/todo_app

# ============================================================
# LOCAL DEVELOPMENT - Pour MySQL local ou PlanetScale
# ============================================================
MYSQL_HOST=127.0.0.1
MYSQL_USER=root
MYSQL_PASSWORD=your-password-here
MYSQL_DATABASE=todo_app
MYSQL_PORT=3306

# ============================================================
# AUTHENTIFICATION ET ADMIN
# ============================================================
JWT_SECRET=your-secret-key-change-this-in-production
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# ============================================================
# FRONTEND
# ============================================================
# Pour Vercel: URL du backend Render
VITE_API_URL=https://your-render-backend.onrender.com

# ============================================================
# RENDER BACKEND (optionnel)
# ============================================================
# URL du service Render (copié après déploiement)
RENDER_BACKEND_URL=https://your-render-backend.onrender.com

NODE_ENV=production
PORT=4000
