{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    { "handle": "filesystem" },
    {
      "src": "^/assets/(.*)$",
      "dest": "/client/assets/$1"
    },
    {
      "src": "^/$",
      "dest": "/client/index.html"
    },
    {
      "src": "^/(.*\\.html)$",
      "dest": "/client/$1"
    },
    {
      "src": "^/(.*)$",
      "dest": "/client/$1"
    }
  ],
  "env": {
    "MYSQL_HOST": "",
    "MYSQL_USER": "",
    "MYSQL_PASSWORD": "",
    "MYSQL_DATABASE": "",
    "DATABASE_URL": "",
    "PGHOST": "",
    "PGUSER": "",
    "PGPASSWORD": "",
    "PGDATABASE": "",
    "JWT_SECRET": "",
    "ADMIN_USERNAME": "",
    "ADMIN_PASSWORD": ""
  }
}
